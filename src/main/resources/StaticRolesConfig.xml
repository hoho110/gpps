<?xml version="1.0" encoding="UTF-8"?>
<StaticRolesConfig enabled="false">
	<!--匿名用户(未登陆)角色,privilege为-1
		id:角色ID
		limitedType:受限类型,1:不受限;0:部分许可;-1:全部受限
		extendsRoleIds:继承角色,该角色拥有所继承角色的所有权限
	-->
	<!--全部用户类型：
		Lender 
			0：非正式用户；1：正式用户(暂未用)
		Borrower
			10：有查看权限的企业用户；11：申请融资权限的企业用户 ；12：有融资权限的企业用户；14：审核未通过
		Admin 
			20:查看权限; 21:所有权限
	 -->
	<!-- 匿名用户 -->
	<Role id="anonymous" privilege = "-1" limitedType="0" extendsRoleIds="">
		<permissionRules>
			<PermissionRule  entityLimitType="gpps.service.ILenderService" operations="register;registerSecondStep;getCurrentUser;login;sendMessageValidateCode;isLoginIdExist;isPhoneNumberExist;isIdentityCardExist;isEmailExist;getProcessedTel"/>
			<PermissionRule  entityLimitType="gpps.service.IBorrowerService" operations="register;getCurrentUser;login;sendMessageValidateCode;isLoginIdExist;isPhoneNumberExist;isIdentityCardExist;isEmailExist;getProcessedTel"/>
			<PermissionRule  entityLimitType="gpps.service.IGovermentOrderService" operations="findByStates;findByBorrowerIdAndStates;findGovermentOrderByProductSeries;findByStatesByPage;findGovermentOrderByProduct;findMimeItems;"/>
			<PermissionRule  entityLimitType="gpps.service.IProductService" operations="find;findByGovermentOrder;findByStates;findByProductSeriesAndStates;findByProductId;findMimeItems"/>
			<PermissionRule  entityLimitType="gpps.service.IActivityService" operations="find;findByState;findMimeItem"/>
			<PermissionRule  entityLimitType="gpps.service.IActivityRefService" operations="find；findByActivity；applyActivityByAnonymous；isApply"/>
			<PermissionRule  entityLimitType="gpps.service.IHelpService" operations="find；findPublicHelps"/>
			<PermissionRule  entityLimitType="gpps.service.INewsService" operations="find；findAll"/>
			<PermissionRule  entityLimitType="gpps.service.INoticeService" operations="find；findAll"/>
			<PermissionRule  entityLimitType="gpps.service.IPayBackService" operations="find；findAll;generatePayBacks;generatePayBacks"/>
			<PermissionRule  entityLimitType="gpps.service.IProductActionService" operations="findAllByProduct"/>
			<PermissionRule  entityLimitType="gpps.service.IProductSeriesService" operations="find;findAll"/>
			<PermissionRule  entityLimitType="gpps.service.IStatisticsService"/>
		</permissionRules>
	</Role>
	<!-- ******************************Lender********************************* -->
	<Role privilege = "0" limitedType="0" extendsRoleIds="anonymous">
        <permissionRules>
        	<PermissionRule  entityLimitType="gpps.service.ILenderService"/>
			<PermissionRule  entityLimitType="gpps.service.ISubmitService"/>
			<PermissionRule  entityLimitType="gpps.service.IAccountService" operations="findLenderCashStreamByActionAndState;findLenderRepayCashStream;findLenderWaitforRepay;getLenderRepayedDetail;getLenderWillBeRepayedDetail;checkThroughThirdPlatform"></PermissionRule>
			<PermissionRule  entityLimitType="gpps.service.IActivityRefService" operations="applyActivity；findByLender"/>
			<PermissionRule  entityLimitType="gpps.service.IHelpService" operations="createPrivate;findMyHelps"/>
			<PermissionRule  entityLimitType="gpps.service.ILetterService" operations="find;findMyLetters;alreadyRead"/>
			<PermissionRule  entityLimitType="gpps.service.IMyAccountService" operations="getCurrentUser;getLAccountMessage"/>
			<PermissionRule  entityLimitType="gpps.service.IThirdPaySupportService" operations="getRegistAccount;getRecharge;getTransferToBuy;getCardBinding;getCash"/>
        </permissionRules>
    </Role>
<!--     <Role privilege = "1" limitedType="0"> -->
<!--         <permissionRules> -->
        	
<!--         </permissionRules> -->
<!--     </Role> -->
	<!-- ******************************Borrower********************************* -->
	<Role privilege = "10|11|14" limitedType="0" extendsRoleIds="anonymous">
    </Role>
    <Role privilege = "12" limitedType="0" extendsRoleIds="anonymous">
        <permissionRules>
        	<PermissionRule  entityLimitType="gpps.service.IBorrowerService"/>
        	<PermissionRule  entityLimitType="gpps.service.IAccountService" operations="findBorrowerCashStreamByActionAndState;getBorrowerRepayedDetail;getBorrowerWillBeRepayedDetail;checkThroughThirdPlatform"/>
        	<PermissionRule  entityLimitType="gpps.service.IGovermentOrderService" operations="findBorrowerOrderByStates;findBorrowerFinancingRequest"/>
        	<PermissionRule  entityLimitType="gpps.service.IHelpService" operations="createPrivate;findMyHelps"/>
        	<PermissionRule  entityLimitType="gpps.service.ILetterService" operations="find;findMyLetters;alreadyRead"/>
        	<PermissionRule  entityLimitType="gpps.service.IMyAccountService" operations="getCurrentUser;getBAccountMessage"/>
        	<PermissionRule  entityLimitType="gpps.service.IPayBackService" operations="applyRepayInAdvance;findBorrowerPayBacks;findBorrowerCanBeRepayedPayBacks;findBorrowerCanBeRepayedInAdvancePayBacks;findBorrowerWaitForRepayed;canRepay;canRepayInAdvance;repay;findWaitforCheckPayBacks"/>
        	<PermissionRule  entityLimitType="gpps.service.IThirdPaySupportService" operations="getRegistAccount;getRecharge;getCardBinding;getCash;getAuthorize"/>
        </permissionRules>
    </Role>
    <!-- ******************************管理员********************************* -->
    <!-- 所有权限 -->
	<Role privilege = "21" limitedType="1">
		<permissionRules>
		</permissionRules>
	</Role>
	<Role privilege = "20" limitedType="0">
		<permissionRules>
		</permissionRules>
	</Role>
</StaticRolesConfig>