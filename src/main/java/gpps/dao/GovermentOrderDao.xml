<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gpps.dao.IGovermentOrderDao">
	<insert id="create" parameterType="gpps.model.GovermentOrder"
		useGeneratedKeys="true" keyProperty="id">
		insert into
		GovermentOrder(title,borrowerId,material,state,financingStarttime,financingEndtime,createtime,incomeStarttime,incomeEndtime,lastModifytime,description)
		values(#{title},#{borrowerId},#{material},#{state},#{financingStarttime},#{financingEndtime},#{createtime},#{incomeStarttime},#{incomeEndtime},#{lastModifytime},#{description})
	</insert>
	<update id="changeState">
		update GovermentOrder set
		state=#{state},lastModifytime=#{lastModifytime}
		where
		id=#{orderId}
	</update>
	<select id="findByStatesWithPaging" resultType="gpps.model.GovermentOrder">
		select *
		from GovermentOrder
		<if test="states != null">
			where state in
			<foreach item="item" index="index" collection="states" open="("
				separator="," close=")">
				#{item}
			</foreach>
		</if>
		order by state asc,createtime desc 
		LIMIT #{offset}, #{recnum}
	</select>
	<select id="findByStates" resultType="gpps.model.GovermentOrder">
		select *
		from GovermentOrder
		<if test="states != null">
			where state in
			<foreach item="item" index="index" collection="states" open="("
				separator="," close=")">
				#{item}
			</foreach>
		</if>
		order by state asc,createtime desc 
	</select>
	<select id="countByState" resultType="int">
		select count(*)
		from GovermentOrder
		<if test="states != null">
			where state in
			<foreach item="item" index="index" collection="states" open="("
				separator="," close=")">
				#{item}
			</foreach>
		</if>
	</select>
	<select id="findByBorrowerIdAndState" resultType="gpps.model.GovermentOrder">
		select *
		from GovermentOrder where borrowerId=#{borrowerId}
		<if test="states != null">
			and state
			in
			<foreach item="item" index="index" collection="states" open="("
				separator="," close=")">
				#{item}
			</foreach>
		</if>
		order by state asc,createtime desc 
	</select>
	<select id="find" parameterType="Integer" resultType="gpps.model.GovermentOrder">
		select *
		from GovermentOrder where id=#{id}
	</select>
	<delete id="delete">
		delete from GovermentOrder
		where
		id=#{id}
	</delete>
</mapper>