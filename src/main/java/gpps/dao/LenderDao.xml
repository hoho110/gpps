<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gpps.dao.ILenderDao">
	<select id="countAll" resultType="int">  <!-- 查询表中记录总数 -->
		select count(*) c from lender;
	</select>
	<select id="find" parameterType="Integer" resultType="gpps.model.Lender">
		select *
		from Lender where id=#{id}
	</select>
	<select id="findByLoginId" parameterType="String" resultType="gpps.model.Lender">
		select *
		from Lender where loginId=#{loginId}
	</select>
	<select id="findByLoginIdAndPassword" resultType="gpps.model.Lender">
		select *
		from
		Lender where loginId=#{loginId} and password=#{password}
	</select>
	<select id="findByTel" parameterType="String" resultType="gpps.model.Lender">
		select
		*
		from Lender where tel=#{tel}
	</select>
	<insert id="create" parameterType="gpps.model.Lender"
		useGeneratedKeys="true" keyProperty="id">
		insert into
		Lender(name,tel,email,loginId,password,identityCard,accountId,createtime,privilege,grade)
		values(#{name},#{tel},#{email},#{loginId},#{password},#{identityCard},#{accountId},#{createtime},#{privilege},#{grade})
	</insert>
	<update id="changePrivilege">
		update Lender set
		privilege=#{privilege} 
		where id=#{id}
	</update>
	<update id="changeLevel">
        update Lender set
        level=#{level} 
        where id=#{id}
    </update>
	<update id="changePassword">
		update Lender set
		password=#{password} 
		where id=#{id}
	</update>
	<update id="changeGrade">
		update Lender set
		grade=#{grade} 
		where id=#{id}
	</update>
	<update id="registerSecondStep">
		update Lender set
		name=#{name},identityCard=#{identityCard},sex=#{sex},address=#{address},annualIncome=#{annualIncome}
		where id=#{id}
	</update>
	<update id="registerThirdPartyAccount">
		update Lender set
		thirdPartyAccount=#{thirdPartyAccount}
		where id=#{id}
	</update>
	<delete id="delete">
		delete from Lender
		where id=#{id}
	</delete>
	<update id="addGrade">
        update Lender set
        grade=grade+#{addGrade} 
        where id=#{id}
    </update>
</mapper>