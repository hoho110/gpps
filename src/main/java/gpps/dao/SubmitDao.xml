<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="gpps.dao.ISubmitDao">
	<insert id="create" parameterType="gpps.model.Submit"
		useGeneratedKeys="true" keyProperty="id">
		insert into
		Submit(state,createtime,lenderId,productId,lastmodifytime,amount)
		values(#{state},#{createtime},#{lenderId},#{productId},#{lastmodifytime},#{amount})
	</insert>
	<select id="findAllByLender" parameterType="Integer" resultType="gpps.model.Submit">
		select *
		from Submit where lenderId=#{lenderId} 
		LIMIT #{offset}, #{recnum}
	</select>
	<select id="countByLender" resultType="int">
		select count(*)
		from Submit where lenderId=#{lenderId}
	</select>
	<select id="findAllByLenderAndStates" resultType="gpps.model.Submit">
		select *
		from Submit where lenderId=#{lenderId}
		<if test="states != null">
			and state in
			<foreach item="item" index="index" collection="states" open="("
				separator="," close=")">
				#{item}
			</foreach>
		</if>
	</select>
	<select id="findAllByProduct" parameterType="Integer"
		resultType="gpps.model.Submit">
		select *
		from Submit where productId=#{productId}
	</select>
	<select id="findAllByProductAndState"
        resultType="gpps.model.Submit">
        select *
        from Submit where productId=#{productId} and state=#{state}
    </select>
	<select id="find" parameterType="Integer" resultType="gpps.model.Submit">
		select *
		from Submit where id=#{id}
	</select>
	<select id="findAllPayedByLenderAndProductState" resultType="gpps.model.Submit">
		select a.*
		from Submit a,Product b where a.productId=b.id and a.state=2 and a.lenderId=#{lenderId} and b.state=#{productState}
		LIMIT #{offset}, #{recnum}
	</select>
	<select id="countByLenderAndProductState" resultType="int">
        select count(*)
        from Submit a,Product b where a.productId=b.id and a.state=2 and a.lenderId=#{lenderId} and b.state=#{productState}
    </select>
	<update id="changeState">
		update Submit set
		state=#{state}
		where
		id=#{id}
	</update>
	<delete id="delete">
		delete from Submit
		where
		id=#{id}
	</delete>
</mapper>